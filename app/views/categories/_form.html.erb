<div class="container">
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3">
			<h1><%= form_title(@category) %></h1>
			<% if @category.errors.any? %>
			  <div class="alert alert-danger">
			    <ul>
			    <% @category.errors.full_messages.each do |msg| %>
			      <li><%= msg %></li>
			    <% end %>
			    </ul>
			  </div>
			<% end %>

			<% if signed_in? %>
				<%= form_for @category do |f| %>
					<div class="form-group">
						<%=  f.text_field :title, class: "form-control input-lg", placeholder: "Ingrese el titulo de la Categoría" %>
					</div>
					<div class="form-group">
						<%=  f.text_area :description, class: "form-control input-lg", placeholder: "Ingrese la descripción de la Categoría" %>
					</div>
					<div>
						<%= f.submit form_title(@category), class: "btn btn-primary btn-lg" %> <%= link_to "Cancelar", categories_path, class: "btn btn-primary btn-lg" %>
					</div>
				<% end %>
			<% end %>
		</div>
	</div>
</div>
