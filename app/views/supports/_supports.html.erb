<%= paginate @supports %>
<table class="table table-responsive">
  <thead>
    <tr>
      <th>title</th>
      <th>Description</th>
      <th>Creado</th>
      <th>Categoria</th>
      <th>Subcategoria</th>
      <th>Prioridad</th>
      <th>Image</th>
      <th colspan=2></th>
    </tr>
  </thead>

  <tbody>
    <% @supports.each do |support| %>
      <tr  style="background-color:<%= set_color_state support.state %>">
        <td><%= link_to support.title, support %></td>
        <td><%= support.description %></td>
        <td><%= support.created_at %></td>
        <td><%= support.subCategory.category.title %></td>
        <td><%= support.subCategory.name %></td>
        <td><%= support.priority.name %></td>
        <td><%= image_tag(support.screen.url(:thumb), size: "40X40") %></td>
        <td><%= link_to 'Cerrar', close_support_path(support),remote: true,class: "boton_modal"  unless support.abierto? || support.cerrado?  %></td>
        <td> <div style="background-color:<%= set_color_state support.state %>"> <%= support.state.humanize %></div></td>
      </tr>
    <% end %>
  </tbody>
</table>

