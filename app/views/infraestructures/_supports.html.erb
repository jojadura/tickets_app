<%= paginate @supports %>
<table class="table table-responsive">
  <thead>
    <tr>
      <th>title</th>
      <th>Funcionario</th>
      <th>Creado</th>
      <th>Categoria</th>
      <th>Subcategoria</th>
      <th>Prioridad</th>
      <th>Image</th>
      <th colspan=2></th>
    </tr>
  </thead>

  <tbody>
    <% @supports.each do |support| %>
      <tr  style="background-color:<%= set_color_state support.state %>">>
        <td><%= link_to support.title, infraestructure_path(support) %></td>
        <td><%= support.user.name %></td>
        <td><%= support.created_at %></td>
        <td><%= support.subCategory.category.title %></td>
        <td><%= support.subCategory.name %></td>
        <td><%= support.priority.name %></td>
        <td><%= image_tag(support.screen.url(:thumb), size: "40X40") %></td>
        <td><%= link_to 'Cerrar', pre_close_support_infraestructure_path(support), method: :pre_close, data: { confirm: 'Esta seguro de cerrar el ticket?' } unless support.pre_finalizado? %></td>
        <td> <div style="background-color:%= set_color_state support.state %>"></div></td>
      </tr>
    <% end %>
  </tbody>
</table>